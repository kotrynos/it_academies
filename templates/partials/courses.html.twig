<section id="courses" class="new-arrivals">
    <div class="container">
        <div class="section-header">
            <h2>Programos</h2>
        </div>
        <div class="new-arrivals-content">
            <div class="row">
                {% for category in categories %}
                    <div class="col-md-3 col-sm-4">
                        <div class="single-new-arrival">
                            <div class="single-new-arrival-bg">
                                <img
                                    src="{{ asset('images/courses/' ~ category.slug ~ '.svg')}}"
                                    alt="courses"
                                />
                                <a href="{{ path('programs', { 'slug': category.slug }) }}">
                                    <div class="single-new-arrival-bg-overlay"></div>
                                </a>
                            </div>
                            <h4><a href="{{ path('programs', { 'slug': category.slug }) }}">{{ category.title }}</a></h4>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
